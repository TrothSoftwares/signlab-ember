


  {{#paper-item raised=true }}
  {{#link-to 'customers.new' class="list-group-item"}} New Customer {{/link-to}}
  {{/paper-item}}


  <div class="container-fluid">
    <div class="row row-margin">
      <div class="col-md-10">
        {{#liquid-if enableEditCustomer class="customer-info"  }}
        <div class="row row-margin">
          {{paper-input label="Customer Name" required=true value=model.name icon="person"  required-errortext="Customer name is required."}}
        </div>
        <div class="row row-margin">
          {{paper-input label="Customer contact Name"  value=model.contactname icon="person"}}
        </div>
        <div class="row row-margin">
          {{paper-input label="Customer contact number"  value=model.contactno icon="phone"}}
        </div>
        <div class="row row-margin">
          {{paper-input label="Other contact number"  value=model.othcontactno icon="phone"}}
        </div>
        <div class="row row-margin">
          {{paper-input label="Other reference details"  value=model.othrefdetails icon="place"}}
        </div>

        {{else}}
        {{#paper-list}}




             {{#paper-item class="md-3-line"}}
               {{paper-icon icon="person"}}
               <div class="md-list-item-text">
                <h3>Client Name</h3><p>{{model.name}}</p>
               </div>
             {{/paper-item}}


             {{#paper-item class="md-3-line"}}
               {{paper-icon icon="person"}}
               <div class="md-list-item-text">
                <h3>Client Contact Name</h3><p>{{model.contactname}}</p>
               </div>
             {{/paper-item}}

             {{#paper-item class="md-3-line"}}
               {{paper-icon icon="phone"}}
               <div class="md-list-item-text">
                 <h3>Client Contact No</h3><p>{{model.contactno}}</p>
               </div>
             {{/paper-item}}

             {{#paper-item class="md-3-line"}}
               {{paper-icon icon="phone"}}
               <div class="md-list-item-text">
                 <h3>Other Contact No</h3><p>{{model.othcontactno}}</p>
               </div>
             {{/paper-item}}

             {{#paper-item class="md-3-line"}}
               {{paper-icon icon="place"}}
               <div class="md-list-item-text">
                 <h3>Other Reference Details</h3><p>{{model.othrefdetails}}</p>
               </div>
             {{/paper-item}}

         {{/paper-list}}


        {{/liquid-if}}
      </div>
      <div class="col-md-1 "style="padding-top:10px">
        {{#if enableEditCustomer }}
        <button type="button" class="btn btn-default pull-right"  {{action "editCustomer"}} >
          <span class="glyphicon glyphicon-floppy-save "></span>
        </button>
        {{else}}
        <button type="button" class="btn btn-default pull-right"  {{action "editCustomer"}} >
          <span class="glyphicon glyphicon-pencil"></span>
        </button>

        <br><br>
        <button type="button" class="btn btn-default pull-right"  {{action "deleteData"}} >
          <span class="glyphicon glyphicon-trash"></span>
        </button>
        {{/if}}
      </div>

    </div>
  </div>
