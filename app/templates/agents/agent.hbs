
<div class="">
  {{#link-to 'agents.new'}}
  <button type="button" class="btn btn-success">New Agent </button>
  {{/link-to}}
  {{#validatable-form action="editagent" }}

  <div class="container-fluid">
    <div class="row row-margin">
      <div class="col-md-11">
          {{#liquid-if enableEditagent class="customer-info"  }}
                    <div class="row row-margin">
                            <div class="col-md-4 col-xs-12"><label for="" class="labels">Agent Name</label></div>
                            <div class="col-md-8 col-xs-12">{{input type="text" required=true class="form-control "  placeholder="Agent Name" value=model.name}}</div>
                    </div>
                    <div class="row row-margin">
                            <div class="col-md-4 col-xs-12"><label for="" class="labels">Agent Contact Name</label></div>
                            <div class="col-md-8 col-xs-12">{{input type="text" class="form-control "  placeholder="Agent contact name" value=model.contactname}}</div>
                    </div>
                    <div class="row row-margin">
                            <div class="col-md-4 col-xs-12"><label for="" class="labels">Agent Contact No.</label></div>
                            <div class="col-md-8 col-xs-12">{{input type="text" required=true  class="form-control "  placeholder="Agent contact No" value=model.contactno}}</div>
                    </div>
                    <div class="row row-margin">
                            <div class="col-md-4 col-xs-12"><label for="" class="labels">Other Contact No.</label></div>
                            <div class="col-md-8 col-xs-12">{{input type="text" class="form-control"  placeholder="Other Contact No" value=model.othcontactno}}</div>
                    </div>
                    <div class="row row-margin">
                            <div class="col-md-4 col-xs-12"><label for="" class="labels">Other Reference Details</label></div>
                            <div class="col-md-8 col-xs-12">{{input type="text" class="form-control"  placeholder="Other Contact No" value=model.othrefdetails}}</div>
                    </div>

    {{else}}

                    <div class="row row-margin">
                            <div class="col-md-4 col-xs-12"><label for="" class=" ">Agent Name</label> </div>
                            <div class="col-md-8 col-xs-12"><label for="" class="labels">{{model.name}}</label></div>
                    </div>
                    <div class="row row-margin">
                            <div class="col-md-4 col-xs-12"><label for="" class="labels">Agent Contact Name</label></div>
                            <div class="col-md-8 col-xs-12"><label class="" for="">{{model.contactname}}</label></div>
                    </div>
                    <div class="row row-margin">
                            <div class="col-md-4 col-xs-12"><label for="" class="labels">Agent Contact No.</label></div>
                            <div class="col-md-8 col-xs-12"><label class="" for="">{{model.contactno}}</label></div>
                    </div>
                    <div class="row row-margin">
                            <div class="col-md-4 col-xs-12"><label for="" class="labels">Other Contact Number</label></div>
                            <div class="col-md-8 col-xs-12"><label class="" for=""> {{model.othcontactno}}</label></div>
                    </div>
                    <div class="row row-margin">
                            <div class="col-md-4 col-xs-12"><label for="" class="labels">Other Contact No.</label></div>
                            <div class="col-md-8 col-xs-12"><label class="" for=""> {{model.othrefdetails}}</label></div>
                    </div>


                  {{/liquid-if}}
          </div>
          <div class="col-md-1 "style="padding-top:10px">
                  {{#if enableEditagent }}
                  <button type="submit" class="btn btn-default pull-right"   >
                          <span class="glyphicon glyphicon-floppy-save "></span>
                  </button>
                  {{else}}
                  <button type="button" class="btn btn-default pull-right"  {{action "editagent"}} >
                          <span class="glyphicon glyphicon-pencil"></span>
                  </button>

                  <br><br>
                  <button type="button" class="btn btn-default pull-right"  {{action "deleteData"}} >
                          <span class="glyphicon glyphicon-trash"></span>
                  </button>
                  {{/if}}
          </div>

  </div>
  </div>
  {{/validatable-form}}



  {{outlet}}
</div>
