
projects/project(slug)/customer page



<div class="row row-margin">
  <div class="col-md-2">
    <label for="" class="labels">Customer</label>
  </div>
  <div class="col-md-8">
    {{ember-select-guru value=project.customer  options=customers onSelect=(action "onSelectCustomer") }}
  </div>
  <div class="col-md-1">
    <button type="button" class="btn btn-default pull-right"  {{action "openCustomerComponent"}} >
      <span class="glyphicon {{if showCustomerComponent "glyphicon-minus" "glyphicon-plus"}} "></span>
    </button>
  </div>
  <div class="col-md-1">
    <button type="button" class="btn btn-default "  {{action "saveProject"}} >
      <span class="glyphicon glyphicon-floppy-save"></span>
    </button>
  </div>
</div>


<div class="row">
  <div id="liquid-spacer-demo">
    {{#validatable-form action="createCustomer" }}

    <div class="col-md-10 pull-right " style="">
      {{#liquid-spacer growDuration=250}}
      {{#if showCustomerComponent}}
        <!--  Customer Form CODE -->
          <div class="col-md-11">

                            <div class="row row-margin">

                                    <div class="col-md-4 col-xs-12"><label for="" class="labels">Client Name</label></div>
                                    <div class="col-md-8 col-xs-12">{{input type="text" required=true class="form-control "  placeholder="Client Name" value=custname}}</div>
                            </div>

                            <div class="row row-margin">
                                    <div class="col-md-4 col-xs-12"><label for="" class="labels">Client Contact Name</label></div>
                                    <div class="col-md-8 col-xs-12">{{input type="text" class="form-control "  placeholder="Client contact name" value=custcontactname}}</div>
                            </div>
                            <div class="row row-margin">
                                    <div class="col-md-4 col-xs-12"><label for="" class="labels">Client Contact No.</label></div>
                                    <div class="col-md-8 col-xs-12">{{input type="text" required=true class="form-control "  placeholder="Client contact No" value=custcontactno}}</div>
                            </div>
                            <div class="row row-margin">
                                    <div class="col-md-4 col-xs-12"><label for="" class="labels">Other Contact No.</label></div>
                                    <div class="col-md-8 col-xs-12">{{input type="text" class="form-control"  placeholder="Other Contact No" value=custothcontactno}}</div>
                            </div>
                            <div class="row row-margin">
                                    <div class="col-md-4 col-xs-12"><label for="" class="labels">Other Reference Details</label></div>
                                    <div class="col-md-8 col-xs-12">{{input type="text" class="form-control"  placeholder="Other Contact No" value=custothrefdetails}}</div>
                            </div>

                            </div>
                            <div class="col-md-1 "style="padding-top:10px">
                            <button type="submit" class="btn btn-default pull-right"   >
                                    <span class="glyphicon glyphicon-floppy-save "></span>
                            </button>
                          </div>




      {{/if}}
      {{/liquid-spacer}}
    </div>
    {{/validatable-form}}

  </div>
</div>

<div class="container-fluid">
  {{#validatable-form action="editCustomer" }}
  <div class="row row-margin">


    <div class="col-md-11">
      {{#liquid-if enableEditCustomer class="customer-info"  }}



      <div class="row row-margin">

        <div class="col-md-4 col-xs-12"><label for="" class="labels">Client Name</label></div>
        <div class="col-md-8 col-xs-12">{{input type="text" required=true class="form-control "  placeholder="Client Name" value=project.customer.name}}</div>
      </div>

      <div class="row row-margin">
        <div class="col-md-4 col-xs-12"><label for="" class="labels">Client Contact Name</label></div>
        <div class="col-md-8 col-xs-12">{{input type="text" class="form-control "  placeholder="Client contact name" value=project.customer.contactname}}</div>
      </div>
      <div class="row row-margin">
        <div class="col-md-4 col-xs-12"><label for="" class="labels">Client Contact No.</label></div>
        <div class="col-md-8 col-xs-12">{{input type="text" required=true class="form-control "  placeholder="Client contact No" value=project.customer.contactno}}</div>
      </div>
      <div class="row row-margin">
        <div class="col-md-4 col-xs-12"><label for="" class="labels">Other Contact No.</label></div>
        <div class="col-md-8 col-xs-12">{{input type="text" class="form-control"  placeholder="Other Contact No" value=project.customer.othcontactno}}</div>
      </div>
      <div class="row row-margin">
        <div class="col-md-4 col-xs-12"><label for="" class="labels">Other Reference Details</label></div>
        <div class="col-md-8 col-xs-12">{{input type="text" class="form-control"  placeholder="Other Contact No" value=project.customer.othrefdetails}}</div>
      </div>

      {{else}}

      <div class="row row-margin">
        <div class="col-md-4 col-xs-12"><label for="" class=" ">Client Name</label> </div>
        <div class="col-md-8 col-xs-12"><label for="" class="labels">{{project.customer.name}}</label></div>
      </div>
      <div class="row row-margin">
        <div class="col-md-4 col-xs-12"><label for="" class="labels">Client Contact Name</label></div>
        <div class="col-md-8 col-xs-12"><label class="" for="">{{project.customer.contactname}}</label></div>
      </div>
      <div class="row row-margin">
        <div class="col-md-4 col-xs-12"><label for="" class="labels">Client Contact No.</label></div>
        <div class="col-md-8 col-xs-12"><label class="" for="">{{project.customer.contactno}}</label></div>

      </div>
      <div class="row row-margin">
        <div class="col-md-4 col-xs-12"><label for="" class="labels">Other Contact Number</label></div>
        <div class="col-md-8 col-xs-12"><label class="" for=""> {{project.customer.othcontactno}}</label></div>
      </div>
      <div class="row row-margin">
        <div class="col-md-4 col-xs-12"><label for="" class="labels">Other Contact No.</label></div>
        <div class="col-md-8 col-xs-12"><label class="" for=""> {{project.customer.othrefdetails}}</label></div>
      </div>


      {{/liquid-if}}
    </div>
    <div class="col-md-1 "style="padding-top:10px">
      {{#if enableEditCustomer }}
      <button type="submit" class="btn btn-default pull-right" >
        <span class="glyphicon glyphicon-floppy-save "></span>
      </button>
      {{else}}
      <button type="button" class="btn btn-default pull-right"  {{action "editCustomer"}} >
        <span class="glyphicon glyphicon-pencil"></span>
      </button>


      {{/if}}


    </div>

  </div>
  {{/validatable-form}}
</div>

{{outlet}}
